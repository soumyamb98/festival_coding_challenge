          <div class="container">
            <div class="user signinBx">
              <!-- <div class="imgBx"><img src="/images/diwali-festival-lights-tradition.jpg" alt="" /></div> -->
              <div class="formBx">
                <form id="form" method="post">
                  <h2>Send wishes</h2>
                  <input type="text" name="name" id="name" placeholder="type name" />
                  <input type="text" name="frndname" id="frndname" placeholder="type frnd name" />
                  <input type="text" name="email" id="email" placeholder="type email" />
