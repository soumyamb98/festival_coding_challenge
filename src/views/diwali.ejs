        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    
    <script>
      
        $('#form').submit((e)=>{
            e.preventDefault()
            $.ajax({
                url: '/sendmail',
                method: 'POST',
                data: {
                    name: $('#name').val(),
                    frndname: $('#frndname').val(),
                    email: $('#email').val(),
                    // message: $('message').val()
                },
                success: (response)=> {
                    console.log(response);
                    if (response.success){
                        alert('mail send successfully to ' + response.name);
                        location.reload();
                    }else{
                        alert("error");
                        location.reload();
                        // window.location.href = '/diwali';
                    }
                },
                error: (response)=>{
                    alert('pls try after sometime');
                }
            })
        })
    </script>
